            <font>
                <Font name="Kalameh Bold" size="12.0"/>
            </font>
        </Button>
        <Button fx:id="animal1" styleClass="buttong" layoutX="321.0" layoutY="223.0" mnemonicParsing="false" prefHeight="70.0"
