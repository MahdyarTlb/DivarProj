        <Button fx:id="car" styleClass="buttong" layoutX="143.0" layoutY="129.0" mnemonicParsing="false" onAction="#handleCarAd"
                prefHeight="70.0" prefWidth="150.0" text="وسایل نقلیه" textFill="#ae3636">
            <font>
                <Font name="Kalameh Bold" size="12.0"/>
            </font>
        </Button>
        <Button fx:id="electro" layoutX="321.0" layoutY="129.0" mnemonicParsing="false" prefHeight="70.0"
